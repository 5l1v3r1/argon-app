{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": false,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "noUnusedLocals": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": [
            "es2016",
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "~/*": [
                "app/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms",
        "app/tns_modules"
    ]
}